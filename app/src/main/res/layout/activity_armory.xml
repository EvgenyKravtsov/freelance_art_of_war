    <!-- BACKGROUND IMAGE -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/general_background"
        android:scaleType="fitXY"
        android:contentDescription="@string/content_description" />

    <!-- TITLE GROUP -->
