<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/systemMenuActivity_rootFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- BACKGROUND IMAGE -->
    <ImageView
        android:id="@+id/systemMenuActivity_backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/general_background"
        android:scaleType="fitXY"
        android:contentDescription="@string/content_description" />

    <!-- CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- CHANGE SKIN -->
        <RelativeLayout
            android:id="@+id/systemMenuActivity_changeSkinRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/transparent">

            <com.tesseractumstudios.warhammer_artofwar.util.font.roboto.TextViewRobotoRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="48dp"
                android:layout_marginStart="48dp"
                android:text="Change Skin"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="48dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/list_arrow_right_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white" />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>