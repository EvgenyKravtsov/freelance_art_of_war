<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_menu_wide_buttons_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">289</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
    </style>

    <style name="main_menu_wide_side_space">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">8</item>
    </style>
    <style name="main_menu_wide_center_space">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">27</item>
    </style>

    <style name="main_menu_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="main_menu_ll_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="main_menu_wide_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">123</item>
        <item name="android:background">#00000000</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="main_menu_search_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/main_menu_search_field_margin</item>
        <item name="android:layout_marginRight">@dimen/main_menu_search_field_margin</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="main_menu_wide_vertical_space">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

</resources>
