<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wide_element">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="root.ll_vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="root.ll_vertical.center_horizontal">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="root.ll_vertical.center_horizontal.section_root">
        <item name="android:padding">@dimen/activity_vertical_margin</item>
    </style>

    <style name="root.ll_vertical.center_horizontal.rules_root">
        <item name="android:padding">@dimen/activity_vertical_margin</item>
    </style>

    <style name="root.ll_vertical.center_horizontal.randomizer_menu">
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
        <item name="android:background">@drawable/randomizer_menu_bg</item>
    </style>

    <style name="main_menu_ll_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">100dp</item>
        <item name="android:layout_marginLeft">@dimen/main_menu_side_margin</item>
        <item name="android:layout_marginRight">@dimen/main_menu_side_margin</item>
        <item name="android:paddingBottom">@dimen/main_menu_bottom_margin</item>
    </style>

    <style name="main_menu_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00000000</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="main_menu_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="main_menu_search_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/main_menu_search_field_margin</item>
        <item name="android:layout_marginRight">@dimen/main_menu_search_field_margin</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">@dimen/main_menu_search_field_top_padding</item>
    </style>

    <style name="main_menu_search_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <!-- <item name="android:background">@drawable/search_field</item> -->
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="section_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/armory_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/armory_button_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="armory_submenu_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/armory_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/armory_submenu_button_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="randomizer_buttons_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="randomizer_top_bar_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/randomizer_button_height</item>
        <item name="android:layout_margin">@dimen/randomizer_top_bar_margins</item>
    </style>

    <style name="randomizer_top_bar_button.second_row">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="randomizer_score">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="randomizer_menu_placeholder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="randomizer_menu_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/randomizer_menu_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/randomizer_menu_button_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="objective_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="objective_type">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="objective_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="score_selector_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="score_selector_buttons_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="score_selector_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="additional_objectives_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="additional_objectives_buttons_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="additional_objectives_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/secondary_objectives_button_height</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="main_menu_search_field.search_result">
        <item name="android:layout_margin">@dimen/activity_vertical_margin</item>
    </style>

    <style name="search_result_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="chaos_boons_buttons_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="chaos_boons_top_cancel">
        <item name="android:layout_width">@dimen/randomizer_button_height</item>
        <item name="android:layout_height">@dimen/randomizer_button_height</item>
        <item name="android:layout_margin">@dimen/randomizer_top_bar_margins</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="chaos_boons_top_bar_button_cancel">
        <item name="android:layout_width">@dimen/randomizer_button_height</item>
        <item name="android:layout_height">@dimen/randomizer_button_height</item>
        <item name="android:layout_margin">@dimen/randomizer_top_bar_margins</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="chaos_boons_top_bar_button_add">
        <item name="android:layout_width">@dimen/randomizer_button_height</item>
        <item name="android:layout_height">@dimen/randomizer_button_height</item>
        <item name="android:layout_margin">@dimen/randomizer_top_bar_margins</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="add_champion_top_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="add_champion_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toLeftOf">@id/delete_last_champion_reward</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignBottom">@id/add_champion_reward</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="add_champion_button">
        <item name="android:layout_width">@dimen/randomizer_button_height</item>
        <item name="android:layout_height">@dimen/randomizer_button_height</item>
        <item name="android:layout_margin">@dimen/randomizer_top_bar_margins</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="add_champion_rewards_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="champion_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/text_size_extra_large</item>
    </style>

    <style name="champion_rewards">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="delete_champion_button">
        <item name="android:layout_width">@dimen/randomizer_button_height</item>
        <item name="android:layout_height">@dimen/randomizer_button_height</item>
        <item name="android:layout_margin">@dimen/randomizer_top_bar_margins</item>
        <item name="android:layout_toLeftOf">@id/add_champion_reward</item>
    </style>

    <style name="add_psychic_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="add_psychic_mastery_lvl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="add_power_name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="add_power_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="add_power_counter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="item_psyker_powers">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="wrap_content.psyker_power_cell">
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
    </style>

    <style name="wrap_content.power_school">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="wide_element.psyker_name">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="wide_element.psyker_mastery_lvl">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="item_special_psyker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
</resources>
